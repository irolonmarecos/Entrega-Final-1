doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="./style.css")
    body 
        div(class='form-register')
            form(action="/api/productos", method="post") 
                h1 Formulario Registro de Productos
                input(class="controls f1" type="text" name="nombre" id="nombre" placeholder="Ingrese el nombre del producto")
                input(class="controls f1" type="text" name="descripcion" id="desc" placeholder="Ingrese una descripcion del producto")
                input(class="controls f1" type="number" name="precio" id="precio" placeholder="Ingrese el precio")
                input(class="controls f1" type="number" name="stock" id="stock" placeholder="Ingrese el Stock")
                input(class="controls f1" type="text" name="url" id="Img" placeholder="Ingrese la URL de la imagen")
                input(input class="botons" type="submit" value="Registrar" onclick="AgregarProducto ()")


        if productos.length 
            div(class="div-prod")
                h1 LISTADO DE PRODUCTOS
                table(class="content-table")
                    thead 
                        tr
                            th ID
                            th Nombre
                            th Precio
                            th Foto
                    tbody
                        ul
                            each items in productos
                                tr 
                                    th= items.id
                                    th= items.Nombre
                                    th= items.Date
                                    th 
                                        img(width="40" src=items.img, alt="Imagen Compra")
                a(href="/" class="botons") Volver atras
        else     
            h2 NO HAY PRODUCTOS EN STOCK
            a(href="/" class="botons") Volver atras
